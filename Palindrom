//Checking Palindrome

#include<stdio.h>
#include<string.h>
#define FF   fflush(stdin)

main()
{

char str[50],*ptr,*ptr1;

puts("\nEnter your String\n");
gets(str);
FF;

for(ptr1=str; *ptr1!='\0';ptr1++)
ptr1--;
for(ptr=str; ptr<=ptr1 ;ptr++)
{
if(*ptr !=*ptr1)
break;
}

if(ptr>ptr1)

puts("\nString Is a palindrome");
else
puts("\nString Is not palindrome");

}